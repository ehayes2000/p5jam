{
  "name": "graphql",
  "license": "MIT",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "start": "bun src/server.ts",
    "clean": "rm -rf dist",
    "build": "bun run clean && bun run generate && bun build --target=bun ./src/server.ts --outdir ./dist",
    "generate": "bun run generate:prisma && bun run generate:nexus",
    "generate:prisma": "bunx prisma generate",
    "generate:nexus": "bun run src/schema.ts"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@prisma/client": "5.19.1",
    "@apollo/server": "4.11.0",
    "bcryptjs": "2.4.3",
    "graphql": "16.9.0",
    "graphql-middleware": "6.1.35",
    "graphql-scalars": "1.23.0",
    "graphql-shield": "7.6.5",
    "jsonwebtoken": "9.0.2",
    "nexus": "1.3.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.6",
    "@types/jsonwebtoken": "9.0.6",
    "@types/node": "20.16.5",
    "prisma": "5.19.1",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "typescript": "5.5.4"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
