{
  "name": "graphql",
  "license": "MIT",
  "scripts": {
    "dev": "bun --watch src/server.tsx",
    "start": "bun src/server.tsx",
    "clean": "rm -rf dist",
    "build": "bun run clean && bun run generate && bun build --target=bun ./src/server.ts --outdir ./dist",
    "generate": "bunx prisma generate"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.1.1",
    "@elysiajs/html": "^1.1.1",
    "@prisma/client": "5.19.1",
    "bcryptjs": "2.4.3",
    "elysia": "^1.1.12",
    "jsonwebtoken": "9.0.2"
  },
  "devDependencies": {
    "@types/bun": "^1.1.9",
    "@types/jsonwebtoken": "9.0.6",
    "prisma": "5.19.1"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
