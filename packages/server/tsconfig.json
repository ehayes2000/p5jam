{
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "Html.createElement",
    "jsxFragmentFactory": "Html.Fragment",
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["esnext"],
    "declaration": true,
    "strict": true,
    "types": ["@elysiajs/html"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
